#include <iostream>

void Oddelements(const int* source, int sourceSize, int*& destination, int& destSize) {
    destSize = 0;
    for (int i = 0; i < sourceSize; i++) {
        if (source[i] % 2 != 0) {
            destSize++;
        }
    }

    destination = new int[destSize];

    int index = 0;
    for (int i = 0; i < sourceSize; i++) {
        if (source[i] % 2 != 0) {
            destination[index] = source[i];
            index++;
        }
    }
}


int main() {
    int N; 

    std::cout << "Введите размер массива A (N): ";
    std::cin >> N;

    int* A = new int[N]; 

    
    std::cout << "Введите " << N << " элементов для массива A:" << std::endl;
    for (int i = 0; i < N; i++) {
        std::cin >> A[i];
    }

 
    int* B = nullptr;
    int B_size = 0;
    Oddelements(A, N, B, B_size);


    std::cout << "Массив B (из нечетных элементов:  "; 
    for (int i = 0; i < B_size; i++) {
        std::cout << B[i] << " ";
    }
    std::cout << std::endl;

   
    delete[] A;
    delete[] B;

    return 0;


#include <iostream>

void Elements(const int* arrA, const int* arrB, int size) {
    bool foundCommon = false;

    std::cout << "Общие положительные элементы: ";


    for (int i = 0; i < size; i++) {
        if (arrA[i] > 0) {
            bool foundInB = false;
            for (int j = 0; j < size; j++) {
                if (arrA[i] == arrB[j]) {
                    foundInB = true;
                    break;
                }
            }
            if (foundInB) {
                std::cout << arrA[i] << " ";
                foundCommon = true;
            }
        }
    }


    if (!foundCommon) {
        std::cout << "таких элементов нет";
    }
    std::cout << std::endl;
}

int main() {
    int N;


    std::cout << "Введите размер множеств (N): ";
    std::cin >> N;

    int* A = new int[N];
    int* B = new int[N];

    std::cout << "Введите " << N << " элементов для множества A:" << std::endl;
    for (int i = 0; i < N; i++) {
        std::cin >> A[i];
    }

    std::cout << "Введите " << N << " элементов для множества B:" << std::endl;
    for (int i = 0; i < N; i++) {
        std::cin >> B[i];
    }

    Elements(A, B, N);

    delete[] A;
    delete[] B;

    return 0;
}

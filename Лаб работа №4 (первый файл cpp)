#include <iostream>

void Oddelements(const int* source, int sourceSize, int*& destination, int& destSize) {
    destSize = 0;
    for (int i = 0; i < sourceSize; i++) {
        if (source[i] % 2 != 0) {
            destSize++;
        }
    }

    destination = new int[destSize];

    int index = 0;
    for (int i = 0; i < sourceSize; i++) {
        if (source[i] % 2 != 0) {
            destination[index] = source[i];
            index++;
        }
    }
}


int main() {
    int N; 

    std::cout << "Введите размер массива A (N): ";
    std::cin >> N;

    int* A = new int[N]; 

    
    std::cout << "Введите " << N << " элементов для массива A:" << std::endl;
    for (int i = 0; i < N; i++) {
        std::cin >> A[i];
    }

 
    int* B = nullptr;
    int B_size = 0;
    Oddelements(A, N, B, B_size);


    std::cout << "Массив B (из нечетных элементов:  "; 
    for (int i = 0; i < B_size; i++) {
        std::cout << B[i] << " ";
    }
    std::cout << std::endl;

   
    delete[] A;
    delete[] B;

    return 0;

